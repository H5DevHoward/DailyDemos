            animation-delay: nth($delayFadeIn, $i-1);
        }
    }
}*/

.right-box {
    /*@for $i from 2 to 4 {
        p:nth-child($i) {
            animation-delay: caculate($i);
        }
    }*/
    /*p:nth-child(2) {
        animation-delay: 0.8s;
    }
    p:nth-child(3) {
        animation-delay: 0.9s;
    }
    p:nth-child(4) {
        animation-delay: 1s;
    }*/

    .choice {
        visibility: hidden;
        opacity: 0;

        span {
            font-size: 22px;
        	cursor: pointer;
            transition: font-size ease-in-out .3s;


            &:before {
                content: '';
                display: inline-block;
                position: relative;
                top: 2px;
                margin-right: 10px;
                width: 12px;
                height: 12px;
                border-radius: 50%;
                border: 2px solid $choiceBtnBorderColor;
                transition: [width height background-color] ease-in-out .3s;
            }
        }

        &.hover {
            /*animation-duration: .8s;*/
            animation-delay: 0s;
            /*animation-iteration-count: infinite;*/
        }

        &.active span {
            font-size: 30px;
        }

        &.active span:before {
            width: 15px;
            height: 15px;
            background-color: $choiceBtnFillColor;
        }
    }
}

.submit,.start {
    width: 120px;
    height: 40px;
    margin: 0 auto;
    border: 2px solid $choiceBtnBorderColor;
    border-radius: 10px;
    margin-top: 50px;
    cursor: pointer;
    font-size: 20px;
    text-align: center;
    line-height: 44px;
    background-color: $choiceBtnFillColor;
    animation-delay: 1.2s;
    transition: [border background-color] ease-in-out .3s;

    &.hover {
        border: 2px solid $choiceBtnFillColor;
        background-color: $choiceBtnBorderColor;
    }
}
