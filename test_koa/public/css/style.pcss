@import 'animate.min.css';

$font-stack: Helvetica, sans-serif;
$primary-color: #333;
$delayFadeIn: .8s .9s 1s;
$choiceBtnBorderColor: #56CBF9;
$choiceBtnFillColor: #81F4E1;

@function caculate($number){
    @return 0.8 + (($number - 1) / 10);
}

@function strip-units($number){
    @return $number / ($number * 0 + 1);
}

* {
    margin: 0;
    padding: 0;
    font-size: 0;
    border: 0;
}

body {
  font: 100% $font-stack;
  /*background-color: $primary-color;*/
}

.header {
    width: 100%;
    height: 50px;
}
.footer {
    width: 100%;
    height: 50px;
}

.container {
    width: 1000px;
    height: 100%;
    margin: 0 auto;
}

.topic {
    font-size: 36px;
    text-align: center;
	margin-bottom: 50px;
}

.left-box {
    width: 500px;
    height: 100%;
    display: inline-block;

    img {
        animation-delay: .4s;
    }
}

.right-box {
    width: 500px;
    display: inline-block;
    vertical-align: top;
}

p {
    font-size: 26px;
    margin-top: 14px;
}

.title {
    animation-delay: .6s;
}


